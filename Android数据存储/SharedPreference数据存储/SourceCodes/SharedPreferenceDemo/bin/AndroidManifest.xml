<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cilinet.sharedpreference"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity 
            android:name="com.cilinet.sharedpreference.activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 设置 SharedPreferencesActivity -->
        <activity 
            android:name="com.cilinet.sharedpreference.activity.SetSharedPreferencesActivity"
            android:screenOrientation="portrait">
        </activity>
        
        <!-- 获取 SharedPreferencesActivity -->
        <activity 
            android:name="com.cilinet.sharedpreference.activity.GetSharedPreferencesActivity"
            android:screenOrientation="portrait">
        </activity>
        
    </application>

</manifest>